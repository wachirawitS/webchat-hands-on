
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Chat {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  key   String  @unique
  title String
  roomProfileUrl String?
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  chatKey   String
  message   String
  source    String
  createdAt DateTime @default(now())

  @@index([chatKey])
}